# Define types of networks
network_types = {
    "LAN": "connects local devices together",
    "WAN": "connects LANs together",
    "Internet": "WANs operating over the Internet"
}

# Questions and Answers
questions = [
    {
        "question": "What type of network a computer in local is connected to?",
        "options": ["Internet", "WAN", "LAN"],
        "answer": "LAN"
    },
    {
        "question": "What type of network could connect an office in one building to another office in a building a few streets away?",
        "options": ["Internet", "WAN", "LAN"],
        "answer": "WAN"
    },
    {
        "question": "What network do you use when you browse www.google.com from your smartphone (not connected to the Wifi)?",
        "options": ["Internet", "WAN", "LAN"],
        "answer": "Internet"
    }
]

# Function to ask questions and check answers
def ask_questions():
    for i, question in enumerate(questions, 1):
        print(f"\nQuestion {i}: {question['question']}")
        print("Options:")
        for option in question['options']:
            print(f"- {option}")
        user_answer = input("Enter your answer: ").strip().upper()
        correct_answer = question['answer']
        if user_answer == correct_answer:
            print("Correct!")
        else:
            print(f"Sorry, the correct answer is {correct_answer}.")

# Call the function to ask questions
ask_questions()

